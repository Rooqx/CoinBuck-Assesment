    "outDir": "dist",
    "rootDir": "src",
    "target": "ES2020",
    "lib": ["ESNext"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
